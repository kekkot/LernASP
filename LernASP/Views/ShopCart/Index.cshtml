@model ShopCartViewModel
<div class ="container">
    @foreach (var el in Model.shopCart.ListShopItems){
        <div class ="alert alert-warning mt-3">
            <b>Деталь:</b> @el.detail.Name<br />
            <b>Цена:</b> @el.detail.Price.ToString("c")
        </div>
    }
    <hr/>
    <div class="btn btn-danger" asp-contoller="Order">Оплатить</div>
</div>